@using AmplaWeb.Sample.BootstrapSupport
@model AmplaWeb.Security.Models.UserModel

<fieldset>
    <legend>@Model.GetLabel() <small>Details</small></legend>
    <dl> <!-- use this class on the dl if you want horizontal styling http://twitter.github.com/bootstrap/base-css.html#typography  class="dl-horizontal"-->     
        @foreach(var property in Model.VisibleProperties())
        {
            <dt>
                @property.GetLabel().ToSeparatedWords()
            </dt>
            <dd>
                @Html.Display(property.Name)                
            </dd>
        }
    </dl>
</fieldset>
<p>
    <a href="javascript:document.getElementById('logoutAction').submit()">Logout</a>

    @using (Html.BeginForm("Logout", "Account", FormMethod.Post, new {id = "logoutAction"}))
    {
        @Html.AntiForgeryToken()
    }
</p>
